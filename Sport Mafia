#include<bits/stdc++.h>
using namespace std;
#define IOS ios::sync_with_stdio(false);
#define pb push_back
long long int root(long long int n)
{
	long long int p=1;
	while(p*p!=n)
	p++;
	return p;
}
int main()
{
	IOS
	long long int n,k;
	cin>>n>>k;
	long long int ans=(root(9+8*(n+k))-3)/2;
	cout<<n-ans;
  return 0;
}
